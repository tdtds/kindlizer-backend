#!/usr/bin/env ruby
# -*- coding: utf-8; -*-
$: << './lib'
require 'kindlizer/backend'
require 'kindlizer/backend/dup_checker'
require 'kindlegen'
require 'logger'

$logger = Logger::new( STDOUT )
$logger.level = Logger::INFO

Kindlizer::Backend::DupChecker.setup({clients:{default:{uri:'mongodb://localhost:27017/kindlizer-backend'}}})

ARGV.each do |task|
	require "kindlizer/generator/#{task}"
	gen = Kindlizer::Generator.const_get( task.split(/-/).map{|a| a.capitalize}.join )
	Dir::mkdir( task )
	gen.new( task ).generate({now:Time::now}) do |opf|
		Kindlegen.run( opf, '-o', "#{task}.mobi" )
	end
end
